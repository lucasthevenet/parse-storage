{
  "name": "storage-validator",
  "version": "1.0.0",
  "description": "Use parsers to validate your local/session storage",
  "author": "Lucas Thevenet <lucastcervantes@gmail.com>",
  "keywords": [
    "zod",
    "yup",
    "superstruct",
    "storage",
    "localstorage",
    "sessionstorage",
    "typescript",
    "react"
  ],
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "dev": "npm run test:watch",
    "prebuild": "npm run clean && npm run test",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs --target es5",
    "build:esm": "tsc -p tsconfig.build.json --module esNext --outDir dist/esm --target es6",
    "postbuild": "npm run copy:hooks && npm run update:readme",
    "pretest": "npm run lint && npm run types-check",
    "test": "jest",
    "test:watch": "npm run test -- --watch --silent",
    "test:coverage": "ts-node ./scripts/coverage.ts",
    "clean": "rm -rf dist node_modules",
    "format": "prettier --write \"**/*.{json,md,mdx,css,scss,yaml,yml}\"",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "release": "changeset publish",
    "pub:beta": "pnpm build && npm publish --tag beta",
    "pub:next": "pnpm build && npm publish --tag next",
    "pub:release": "pnpm build && npm publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.4",
    "ts-node": "^10.9.1",
    "type-fest": "^3.5.1",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  },
  "peerDependencies": {
    "react": "^16.8.0  || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0  || ^17.0.0 || ^18.0.0",
    "zod": "^3.0.0"
  },
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasthevenet/storage-validator"
  }
}
